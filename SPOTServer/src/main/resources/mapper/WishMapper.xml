<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.spot.mapper.WishMapper">

	<insert id="insertWish" parameterType="WishList">
		insert into WishList values(null, #{user_id}, #{spot_id}, #{type})
	</insert>
	
	<select id="checkWish" parameterType="String" resultType="java.util.Map">
		select wishlist_id from WishList where user_id=#{user_id} and spot_id=#{spot_id}
	</select>
	
	<delete id="deleteWish" parameterType="String">
		delete from WishList where wishlist_id=#{wishlist_id}
	</delete>
	
	<select id="wishlist" parameterType="String" resultType="java.util.Map">
		select spot_id from WishList where user_id=#{user_id}
	</select>

	
</mapper>